{% extends 'ag_base/backend.html.twig' %}

{% block container %}

    <div class="wrapper row-offcanvas row-offcanvas-left">

        {% include 'menu.html.twig' with {'option': 'users_create'} %}

        <!-- Right side column. Contains the navbar and content of the page -->
        <aside class="right-side">                
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Créer un nouvel utilisateur
                </h1>
            </section>

            <!-- Main content -->
            <section class="content">

                {% include 'ag_alerts.html.twig' %}

                <div class="row">
                    <div class="col-md-3">

                        {{ form_start(form, {'method': 'POST'}) }}
                            {{ form_errors(form) }}

                            

									

									<div class='form-group'>
									    {{ form_label(form.UserLastName,"Nom") }}
									    {{ form_widget(form.UserLastName, { attr: { 'class': 'form-control' }}) }}
									</div>

									<div class='form-group'>
									    {{ form_label(form.UserFirstName,"Prénom") }}
									    {{ form_widget(form.UserFirstName, { attr: { 'class': 'form-control' }}) }}
									</div>

									<div class='form-group'>
									    {{ form_label(form.UsersBirthDate,"Date de naissance") }}
									    {{ form_widget(form.UsersBirthDate, { attr: { 'class': 'form-control' }}) }}
									</div>

									<div class='form-group'>
									    {{ form_label(form.UserAddress,"Rue") }}
									    {{ form_widget(form.UserAddress, { attr: { 'class': 'form-control' }}) }}
									</div>

									<div class='form-group'>
									    {{ form_label(form.UserAddressN,"Numéro") }}
									    {{ form_widget(form.UserAddressN, { attr: { 'class': 'form-control','style': 'widht: 10px; ' }}) }}
									</div>

									<div class='form-group'>
									    {{ form_label(form.UserAddressB,"Boite") }}
									    {{ form_widget(form.UserAddressB, { attr: { 'class': 'form-control' }}) }}
									</div>

									<div class='form-group'>
									    {{ form_label(form.UserAddressC,"Code postal") }}
									    {{ form_widget(form.UserAddressC, { attr: { 'class': 'form-control' }}) }}
									</div>

									<div class='form-group'>
									    {{ form_label(form.UserAddressL,"Localité") }}
									    {{ form_widget(form.UserAddressL, { attr: { 'class': 'form-control' }}) }}
									</div>

									<div class='form-group'>
									    {{ form_label(form.UserPhone,"Numéro de téléphone") }}
									    {{ form_widget(form.UserPhone, { attr: { 'class': 'form-control' }}) }}
									</div>

									<div class='form-group'>
									    {{ form_label(form.UserMail,"E-mail") }}
									    {{ form_widget(form.UserMail, { attr: { 'class': 'form-control' }}) }}
									</div>


                                {{ form_rest(form) }}

                                <div class="box-footer">
                                    <button type="submit" class="btn btn-primary">Create</button>
                                </div>

                            
                        {{ form_end(form) }}


                    </div>
                </div>

            </section><!-- /.content -->
        </aside><!-- /.right-side -->
    </div><!-- ./wrapper -->

{% endblock %}
